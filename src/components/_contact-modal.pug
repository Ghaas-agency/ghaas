  #contact-modal
    .contact-modal-content
      button.button-unstyled.modal-close(type="button") Ã—
      h3 Contact Us
      p Please enter your details and we'll get in touch soon.
      #mc_embed_signup
        form#mc-embedded-subscribe-form.validate(action="https://xyz.us12.list-manage.com/subscribe/post?u=2c4041c68da79c12074045904&id=fe8c495a2f" method="post" name="mc-embedded-subscribe-form" target="_blank" novalidate="")
          #mc_embed_signup_scroll
            .mc-field-group
              label(for="mce-FULLNAME") Name 
              input#mce-FULLNAME.required(type="text" value="" name="FULLNAME" placeholder="John Doe")
