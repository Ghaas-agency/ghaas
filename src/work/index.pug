    script(src="../assets/js/app.js")
    script.
      var workModal = document.getElementsByClassName('work-modal')[0];

      function openWorkModal(event, index) {
        workModal.className = 'work-modal open open-' + index;
        document.body.style.overflow = 'hidden';
      }

      function closeWorkModal() {
        workModal.className = 'work-modal';
        document.body.style.overflow = 'auto';
      }

      window.addEventListener('click', function(e) {
        if (e.target.classList.contains('work-modal')) {
          closeWorkModal();
        }
      });
